package QuizProject.QuestionPackage;

import java.util.ArrayList;

import QuizProject.DBConnection;

public class MultiMultipleChoiceAnswer extends Answer {

	public MultiMultipleChoiceAnswer(int id, DBConnection connection) {
		super(id, connection);
	}
	
	public ArrayList<String> getAnswerContent(){
		return this.getCSV("answer_content");
	}

	public int getScore(ArrayList<Integer> answer){
		int numSelectedCorrectly = 0;
		
		for (Integer selection : answer){
			if (this.getAnswerContent().contains(Integer.toString(selection))){
				numSelectedCorrectly++;
			}
		}
		
		return numSelectedCorrectly;
	}	
}
