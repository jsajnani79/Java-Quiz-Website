package QuizProject.QuestionPackage;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Set;

public class UnorderedMultiTextQuestion extends Question {

	ArrayList<Set<String>> actualAnswers;
	
	public UnorderedMultiTextQuestion(String question, ArrayList<Set<String>> actualAnswers) {
		super(question);
		for(int i = 0; i < actualAnswers.size(); i++){
			Set<String> currAnswers = actualAnswers.get(i);
			Set<String> caseCorrectAnswers = new HashSet<String>();
			for(String currString : currAnswers){
				currString = currString.toLowerCase();
				caseCorrectAnswers.add(currString);
				actualAnswers.set(i, caseCorrectAnswers);
			}
		}
		this.actualAnswers = actualAnswers;
	}
	
	@Override
	public int getScore(Object obj){
		if(!(obj instanceof ArrayList<?>)) {
			System.out.println("Error in Question.getScore, -1 was returned");
			return -1;
		}
		ArrayList<String> userAnswers = (ArrayList<String>) obj;
		boolean[] answerChecked = new boolean[userAnswers.size()];
		int score = 0;
		for (int i = 0; i < userAnswers.size(); i++){
			String currAnswer = userAnswers.get(i);
			currAnswer = currAnswer.toLowerCase();
			for(Set<String> validAnswerSet : actualAnswers){
				if(validAnswerSet.contains(currAnswer) && !answerChecked[i]){
					answerChecked[i] = true;
					score++;
					break;
				}
			}
		}
		return score;
	}

	public int getMaxScore(){
		return actualAnswers.size();
	}
	
}
