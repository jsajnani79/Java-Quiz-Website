package QuizProject;

import static org.junit.Assert.*;
import QuizProject.AccountManager;

import org.junit.Before;
import org.junit.Test;

public class AccountManagerTest {

AccountManager accountTest;
	
	@Before
	public void setUp() throws Exception {
		accountTest = new AccountManager(new DBConnection());
	}
	
	@Test
	public void test1() {
		assertEquals(true, accountTest.accountExists("Patrick"));
		assertEquals(true, accountTest.accountExists("Molly"));
		assertEquals(true, accountTest.checkPassword("Patrick","1234"));		
		assertEquals(true, accountTest.checkPassword("Molly","FloPup"));
		assertEquals(false, accountTest.accountExists("Jai"));
		assertEquals(false, accountTest.checkPassword("Jai","FloPup"));
		accountTest.createAccount("Jai", "password");
		assertEquals(true, accountTest.accountExists("Jai"));
		assertEquals(true, accountTest.checkPassword("Jai","password"));
	}

}
