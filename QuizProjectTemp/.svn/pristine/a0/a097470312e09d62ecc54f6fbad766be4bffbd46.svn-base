package QuizProject.QuestionPackage;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Set;

public class FillInTheBlankQuestion extends OrderedMultiTextQuestion{

	@SuppressWarnings("unchecked")
	public FillInTheBlankQuestion(String question, Object obj) {
		super(question, new ArrayList<Set<String>>(Arrays.asList((Set<String>) obj)));
	}
	
	@Override
	public int getScore(Object obj){
		if(!(obj instanceof String)){ 
			System.out.println("Error in FillInTheBlankQuestion.getScore, -1 was returned");
			return -1;
		}
		String answer = (String) obj;
		ArrayList<String> answersArray = new ArrayList<String>();
		answersArray.add(answer);
		try {
			return super.getScore(answersArray);
		} catch (Exception e) {
			e.printStackTrace();
			return 0;
		}
	}
}
